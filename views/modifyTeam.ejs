<html>
    <head>
        <meta charset="utf8">
        <title>Modificación de equipo</title>
        <link rel='stylesheet' href='/stylesheets/style.css'>
    </head>
    <body> 
        <h2>Equipo <%=team[0].teamname%></h2>
            <ul>
                <li><strong>Nombre equipo:</strong><%=team[0].teamname%></li>
                <li><strong>Creador del equipo:</strong><%=team[0].creator%></li>
                <li><strong>Número de miembros del equipo:</strong><%=team[0].maxmembers%></li>
                <li><strong>Usuarios del equipo:</strong><%=team[0].users%></li>
            </ul>

            <%if(err) {%>
                <%=err%>
            <%}%> 

            <form method="GET" action='/teams/modifyuser/<%=team[0].teamname%>'>
                <label for="maxmembers">Modificar número de miembros:</label>
                <input type="number" name="maxmembers" id="maxmembers">
                <input type="submit" value="Cambiar nºusuarios">
            </br>
            </form>
            <form method="GET" action='/teams/modifyusers/<%=team[0].teamname%>'>
                <label for="users">Añadir usuario:</label>
                <input type="text" name="users" id="users">
                <input type="submit" value="Añadir usuario">
            </form>
    </body>
</html>